{
  "manifest_version": 2,
  "name": "ColorPicker",
  "description": "Chrome extension analyser",
  "version": "1.0",

  "content_security_policy": "script-src 'self'; object-src 'self'",
  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [{
    "matches": ["file:///*/*", "http://*/*", "https://*/*"],
    "js": ["content_script.js"],
    "run_at": "document_end",
    "all_frames": true
  }],

  "web_accessible_resources": [
    "cursor.png",
    "cursor.cur"
  ],

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "tabs"
  ]
}